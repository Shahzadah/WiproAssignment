<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="TextFontRobotoRegular">
        <item name="typeface">Roboto-Regular.ttf</item>
    </style>

    <style name="TextFontRobotoBold">
        <item name="typeface">Roboto-Bold.ttf</item>
    </style>

    <style name="HeaderTextAlert" parent="TextFontRobotoBold">
        <item name="android:textSize">@dimen/text_size_alert_heading</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DescriptionTextAlert" parent="TextFontRobotoRegular">
        <item name="android:textSize">@dimen/text_size_alert_desc</item>
        <item name="android:textColor">@color/grey_one</item>
    </style>

    <style name="ButtonTextAlertBold" parent="TextFontRobotoBold">
        <item name="android:textSize">@dimen/text_size_alert_button</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:paddingLeft">@dimen/padding_14dp</item>
        <item name="android:paddingTop">@dimen/padding_14dp</item>
    </style>

</resources>