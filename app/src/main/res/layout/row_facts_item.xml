<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/horizontal_line_height"
    android:background="@drawable/feed_background"
    android:paddingBottom="@dimen/padding_14dp"
    android:paddingLeft="@dimen/padding_10dp"
    android:paddingRight="@dimen/padding_10dp"
    android:paddingTop="@dimen/padding_14dp">

    <com.wipro.wipro.widgets.CustomTextView
        android:id="@+id/textview_title"
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name" />

    <com.wipro.wipro.widgets.CustomTextView
        android:id="@+id/textview_desc"
        style="@style/Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_title"
        android:layout_marginTop="@dimen/padding_5dp"
        android:layout_toStartOf="@+id/flImage"
        android:text="@string/app_name" />

    <FrameLayout
        android:id="@+id/flImage"
        android:layout_width="@dimen/fact_item_image_width"
        android:layout_height="@dimen/fact_item_image_height"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textview_title"
        android:layout_marginEnd="@dimen/padding_10dp">

        <ImageView
            android:id="@+id/image_fact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_no_image" />

        <ProgressBar
            android:id="@+id/progress_image_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</RelativeLayout>
